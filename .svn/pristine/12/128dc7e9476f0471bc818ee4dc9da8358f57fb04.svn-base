	function integrantes($detalles)
	{
		$this->imprimir_titulo_cuadro('Integrantes del Proyecto');
		$ancho_cols = array(20,51,45,38,18,18);
		/* ENCABEZADO DE LA TABLA */
		$this->SetTextColor(255,255,255);
		$this->Cell($ancho_cols[0],5,"DNI/Pas.",1,0,'C',true);
		$this->Cell($ancho_cols[1],5,"Integrante",1,0,'C',true);
		$this->Cell($ancho_cols[2],5,"Función",1,0,'C',true);
		$this->Cell($ancho_cols[3],5,"Horas dedicación",1,0,'C',true);
		$this->Cell($ancho_cols[4],5,"Desde",1,0,'C',true);
		$this->Cell($ancho_cols[5],5,"Hasta",1,1,'C',true);


		
		/* CUERPO DE LA TABLA */
		$this->SetFont('arial','',8);
		$this->SetTextColor(0,0,0);
		foreach ($detalles as $integrante) {
			$integrante['apellido'] = strtoupper($integrante['apellido']);
			$integrante['nombres'] = ucwords(strtolower($integrante['nombres']));
			$ayn = $integrante['apellido'] . ", " . $integrante['nombres'];
			#/*
			if (strlen($ayn) > 29){
				$nom = explode(" ", $integrante['nombres']);
				$nom[count($nom)-1] = substr(end($nom),0,1).".";
				$nom_corto = implode(" ", $nom);
				$ayn = $integrante['apellido'] . ", " . $nom_corto;
				if (strlen($ayn) > 29) {
					$ape = explode(" ", $integrante['apellido']);
					$ape[count($ape)-1] = substr(end($ape),0,1).".";
					$ape_corto = implode(" ", $ape);
					$ayn = $ape_corto . ", " . $nom_corto;
				}
			} 
			#*/
			$this->Cell($ancho_cols[0],5,$integrante['nro_documento'],1,0,'C',false);
			$this->Cell($ancho_cols[1],5,$ayn,1,0,'L',false);
			$this->Cell($ancho_cols[2],5,$integrante['funcion'],1,0,'C',false);
			$this->Cell($ancho_cols[3],5,$integrante['horas_dedicacion_desc'],1,0,'C',false);
			$this->Cell($ancho_cols[4],5,date('d/m/Y',strtotime($integrante['fecha_desde'])),1,0,'C',false);
			$this->Cell($ancho_cols[5],5,date('d/m/Y',strtotime($integrante['fecha_hasta'])),1,1,'C',false);

		}

	}

