				<td colspan="2">
					[ef id=lugar_trabajo_becario]</td>
			</tr>
			<tr>
				<td>
					[ef id=id_grupo]</td>
			</tr>
		</tbody>
	</table>
</fieldset>
<p>&nbsp;</p>
